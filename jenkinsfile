pipeline {
    agent any

    stages{
        stage ('test') {
            steps {
                echo "Starting Unit tests"
                sh """
                    pwd
                    ls -l
                """
            }

        }
        stage('Build') {
            steps {
                sh """
                    zip -r feature.zip ./* --exclude .git --exclude .zip
                    cp feature.zip /tmp
                """
                echo "DOne"
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}
